@page "/dashboard"





<div class="dash-board">
    @if (_homeCountryError)
    {
        <div>
            <p>Home country not found</p>
            <HomeCountryDropDown @ref="dropDown" CountryChanged="HomeCountryChange" CountryNames="@countryNames" CountryCodeDict="@countryCodeDict" />
        </div>
    }
    else if (_country == null || _countryToCompareWith == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="country-of-the-day">
            <h2>
                The country of the day is @_countryToCompareWith.Name
            </h2>
        </div>
        <div class="container"> 

            <div class="header"> 
                <div class="data-filter">
                    <DataFilterer @key="@_availableMetrics" Data="@_dataMetrics" OnChange="HandleFilterChange"></DataFilterer>
                </div>
                <nav class="table-of-contents">
                    <ul>
                        @foreach (var metric in _dataMetrics)
                        {
                            <li><a href="#@FormatLabel(metric)">@metric</a></li>
                        }
            </ul>
        </nav>
        </div>
        @if (_availableMetrics.Count == 0)
        {
            <div>
                <p>No shared data between @_country.Name and @_countryToCompareWith.Name</p>
            </div>
        }
        else if(_dataMetrics.Count != 0)
        {
            <div class="grid-container">
                @foreach (var metric in _dataMetrics)
                {
                    <div id="@FormatLabel(metric)" class="grid-item">
                            <ComparisonComponent @key=@metric @ref="@compComp[metric]" CountryComparison="@_countryToCompareWith" CountryOrigin="@_country" date="@_date" ResourceType="@metric"></ComparisonComponent>
                    </div>
                }
                </div>
            }
            else
            {
                <div>
                    <p>No data selected between @_country.Name and @_countryToCompareWith.Name</p>
                </div>
            }

        </div>
    }
</div>
