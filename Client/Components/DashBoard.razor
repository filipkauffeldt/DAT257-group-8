@page "/dashboard"





<HomeCountryDropDown @ref="dropDown" CountryChanged="HomeCountryChange" CountryNames ="@countryNames" CountryCodeDict="@countryCodeDict"/>
<div class="dash-board">
    @if (dataMetrics.Count() == 0)
    {
        <p>Loading...</p>
    }
    else
    {
        <nav class="table-of-contents">
            <h3>Statistics</h3>
            <ul>
                @foreach (var metric in dataMetrics)
                {
                    <li><a href="#@FormatLabel(metric)">@metric</a></li>
                }
            </ul>
        </nav>
        <div class="grid-container">
            @foreach (var metric in dataMetrics)
            {
                <div id="@FormatLabel(metric)" class="grid-item">
                    <ComparisonComponent @ref="@compComp[metric]" CountryComparison="@countryComp" CountryOrigin="@countryCompTwo" date="@date" ResourceType="@metric"></ComparisonComponent>
                </div>
            }
        </div>
    }
</div>
