@inject HttpClient httpClient
@inject API.IApiHandler apiHandler;

<div class="rz-p-sm-12 rz-text-align-center">
    <RadzenLabel Text="Filter Data" Component="DropDownMultipleChips" Style="margin-right: 8px; vertical-align: middle;" Visible=true></RadzenLabel>
    @if(data.Count() == 0 || data == null)
    {
        <RadzenDropDown TValue=string
                        Data=null
                        TextProperty="."
                        ValueProperty="."
                        Name="DropDownMultiple"
                        Multiple=true
                        AllowClear=true
                        Placeholder="Loading data..."
                        Chips=true>
        </RadzenDropDown>
    }
    else
    {
        <RadzenDropDown 
                        TValue="string"
                        Data=@data
                        TextProperty="Name"
                        Name="DropDownMultiple"
                        Multiple=true
                        AllowClear=false
                        Placeholder="Select data"
                        Chips=true>
        </RadzenDropDown>
    }
</div>

